<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">

    <div class="navbar-header">
      <a class="navbar-brand" id="logo" href="/projects">
        <%= get_site_top_name %> <i class="fa fa-plane"></i> 
      </a>

      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-content">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div id="nav-content" class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to " 翻译", translate_path, :class => "fa fa-graduation-cap require-loading" %></li>
        <% if logged_in? %> 
          <% if current_trader.authority != "self" %>
            <li><%= link_to " 分析", analysis_path, :class => "fa fa-signal require-loading" %></li>
          <% end %>
          <% if is_admin? %>
            <!-- admin menu -->
            <li><%= link_to " 特別会計", invoice_internal_path, :class => "fa fa-money require-loading" %></li>
            <li><%= link_to " 請求書", admin_path, :class => "fa fa-dollar require-loading" %></li>
            <li><%= link_to " 签证", projects_path, :class => 'fa fa-users require-loading' %></li>
            <!--<li><%= link_to " 中連社", company_codes_path, :class => 'fa fa-book require-loading' %></li>-->
            <!--<li><%= link_to " 注册", signup_path, :class => 'fa fa-plus require-loading' %></li>-->
            <li><%= link_to " 会员", traders_path, :class => 'fa fa-lock require-loading' %></li>
            <li><%= link_to " 操作步骤", description_path, :class => 'fa fa-flag' %></li>
          <% elsif has_authority? %>
            <li><%= link_to " 会計", admin_check_invoice_path, :class => 'fa fa-dollar require-loading' %></li>
          <% else %>
            <li><%= link_to " 电子签证", projects_path, :class => 'fa fa-users' %></li>
            <% if current_trader.authority == "self" %>
              <li><%= link_to " 我的账单", my_invoice_path, :class => 'fa fa-dollar' %></li>
            <% end %>
            <li><%= link_to " 操作步骤", description_path, :class => 'fa fa-flag' %></li>
            <!-- trader menu -->
          <% end %>

          <!-- common menu -->
          <li><%= link_to " 退出", logout_path, :method => :delete, :class => 'fa fa-sign-out' %></li>
        <% else %>
          <li><%= link_to " 操作步骤", description_path, :class => 'fa fa-flag' %></li>
          <li><a href="/login"><i class="fa fa-sign-in require-loading"></i> 登录</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
