<% unless project.id.nil? %>
  <tr id="<%= project.id %>" class="">
    <td class="col-md-5 col-sm-5 col-xs-5">
        <% if is_admin? %>
            <div class="origin-company-name-cell" onclick="location.href='/traders/<%= project.trader.id %>'"><%= project.trader.company_name %>(<%= project.trader.person_name %>)</div>        
        <% end %>

        <div class="bg-primary company-name-cell"><%= project.china_company_name %></div>
        <div class="date-arrival-cell"><%= project.date_arrival.strftime("%Y/%m/%d") %>〜<%= project.date_leaving.strftime("%Y/%m/%d") %></div>
        <div class="visa-type-cell"><%= visa_type_str(project.visa_type) %></div>
    </td>

    <td class="col-md-3 col-sm-3 col-xs-3">
        <div class="presentative-name-cell"><%= project.representative_name_chinese %> ( <%= project.representative_name_english %> ) </div>
        <div class="total-people-cell">共<%= project.total_people .to_s+ "名" %></div>
    </td>

    <td class="col-md-2 col-sm-2 col-xs-2">
        <div class="status-cell <%= project.status %>"><%= status_type_str(project.status) %></div>
        <div class="created-cell"><%= project.updated_at.strftime("%Y/%m/%d %H:%M") %></div>
        <% if is_admin? %>
            <div class="row">
                <div class="btn-group col-md-12 col-sm-12 col-xs-12"  data-toggle="buttons">
                    <button class="btn btn-default btn-xs col-sm-4 col-xs-4" onclick="location.href='/update_status?id=<%= project.id %>&amp;status=uncommitted'">申请</button>
                    <button class="btn btn-default btn-xs col-sm-4 col-xs-4" onclick="location.href='/update_status?id=<%= project.id %>&amp;status=waiting'">等待</button>
                    <button class="btn btn-default btn-xs col-sm-4 col-xs-4" onclick="location.href='/update_status?id=<%= project.id %>&amp;status=committed'">完了</button>
                </div>
            </div>
        <% end %>
    </td>


    <td class="col-md-2 col-sm-2 col-xs-2 btn-container">
        <div class="row">
            <div class="btn-group" class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <% if !is_admin? && (project.status == "committed" || project.date_arrival < Date.today) %>
                    <div class="btn btn-primary btn-xs col-md-6" disabled="disabled">修改</div>
                    <div class="btn btn-danger btn-xs col-md-6" disabled="disabled">删除</div>
                <% else %>
                    <%= link_to "修改", edit_project_path(project), :method => :get, :class => "btn btn-primary btn-xs modify-project col-md-6" %>
                    <%= link_to "删除", project, :method => :delete, :data => { :confirm => "删除后将无法复原! 您确定删除此电签吗？" }, :class => "btn btn-danger btn-xs col-md-6" %>
                <% end %>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="btn-group">
                     <div class="btn btn-default btn-xs" onclick="location.href='<%= project_path(project, :format => "pdf", :id => project.id) %>'">PDF</div>
                     <div class="btn btn-default btn-xs" onclick="location.href='<%= project_path(project, :format => "pdf", :id => project.id) %>'">請求</div>
                </div>
            </div>
        </div>
    </td>
  </tr>
<% end %>


