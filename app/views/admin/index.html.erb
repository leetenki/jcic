<h1>
  <i class="fa fa-dollar"></i> 
  請求書作成
</h1>



<div class="row">
  <div class="container col-md-10 col-md-offset-1">
      <table class="project-info table">
        <caption>


          <div class="row" style="text-align:center"><h3>所有的签证 （ 查询结果：<%= @projects.length %>件 ）<h3></div>
          <div class="row" style="text-align:center">
            <form action="/admin" accept-charset="UTF-8" method="get">
              <div class="col-md-4 col-sm-4 col-xs-4">
                <select name="trader_id" class="form">
                  <% @traders.each do |trader| %>
                    <option value="<%= trader.id %>"><%= trader.company_name %></option>
                  <% end %>
                </select>
              </div>
              <div class="col-md-3 col-sm-3 col-xs-3">
                <input type="text" class="form-control free-datepicker" placeholder="开始日期" name="from"/>
              </div>
              <div class="col-md-3 col-sm-3 col-xs-3">
                <input type="text" class="form-control free-datepicker" placeholder="结束日期" name="to"/>
              </div>
              <div class="col-md-2 col-sm-2 col-xs-2">
                <input class="btn btn-primary require-loading" type="submit" value="検索"/>
              </div>
            </form>
          </div>



          <div style="text-align:center; height:60px;">
            <%= paginate @projects, :window => 5 %>
          </div>
        </caption>



        <thead>
          <tr>
            <th>签证资料</th>
            <th>状态</th>
              <th>价格</th>
            <th>回国报告</th>
          </tr>
        </thead>

        <tbody>
          <%= render @projects %>
        </tbody>
      </table>

  </div>
</div>